<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="2025-09-09-005-delete-media-column-many-to-many-media" author="Dywinar">
        <dropForeignKeyConstraint baseTableName="hotel_media" constraintName="fk_hotel_media_media"/>
        <dropForeignKeyConstraint baseTableName="room_media" constraintName="fk_room_media_media"/>
        <dropTable tableName="media"/>
        <dropColumn tableName="hotel_media" columnName="media_id"/>
        <dropColumn tableName="room_media" columnName="media_id"/>

        <addColumn tableName="hotel_media">
            <column name="url" type="varchar(50)"><constraints nullable="false"/> </column>
        </addColumn>
        <addColumn tableName="room_media">
            <column name="url" type="varchar(50)"><constraints nullable="false"/> </column>
        </addColumn>

    </changeSet>
</databaseChangeLog>
