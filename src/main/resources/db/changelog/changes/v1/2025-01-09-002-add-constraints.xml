    <changeSet id="2025-01-09-002-add-constraints" author="Dywinar">
        <sql>
            ALTER TABLE booking
            ADD CONSTRAINT chk_prepayment_positive CHECK (prepayment >= 0);
        </sql>
        <sql>
            ALTER TABLE booking
            ADD CONSTRAINT chk_time_order CHECK (end_time > start_time);
        </sql>
    </changeSet>

</databaseChangeLog>
